<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiagnosticNP.Views.MainPage"
             Title="Вибродиагностика">

    <ScrollView>
        <StackLayout Padding="20">
            <!-- NFC Секция -->
            <Label Text="Данные NFC метки:" FontAttributes="Bold"/>
            <Label Text="{Binding DiagnosticData.NFCData}" 
                   BackgroundColor="LightGray" 
                   Padding="10"/>

            <Label Text="Время сканирования:" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Label Text="{Binding DiagnosticData.ScanTime}" 
                   BackgroundColor="LightGray" 
                   Padding="10"/>

            <Button Text="Запуск сканирования NFC" 
                    Command="{Binding StartListeningCommand}"
                    BackgroundColor="Green"
                    TextColor="White"
                    Margin="0,20,0,0"/>

            <Button Text="Остановка сканирования NFC" 
                    Command="{Binding StopListeningCommand}"
                    BackgroundColor="Red"
                    TextColor="White"
                    Margin="0,10,0,0"/>

            <Button Text="Прочитать NFC метку" 
                    Command="{Binding ReadTagCommand}"
                    BackgroundColor="Blue"
                    TextColor="White"
                    Margin="0,10,0,0"/>

            <!-- Виброметр Секция -->
            <Label Text="Данные виброметра:" FontAttributes="Bold" Margin="0,30,0,0"/>

            <Label Text="Последнее обновление:" FontAttributes="Italic"/>
            <Label Text="{Binding LastAdvertising}" 
                   BackgroundColor="LightBlue" 
                   Padding="10"/>

            <Label Text="Скорость (mm/s):"/>
            <Label Text="{Binding Velocity}" 
                   BackgroundColor="LightBlue" 
                   Padding="10"/>

            <Label Text="Ускорение (mm/s²):"/>
            <Label Text="{Binding Acceleration}" 
                   BackgroundColor="LightBlue" 
                   Padding="10"/>

            <Label Text="Куртозис:"/>
            <Label Text="{Binding Kurtosis}" 
                   BackgroundColor="LightBlue" 
                   Padding="10"/>

            <Label Text="Температура (°C):"/>
            <Label Text="{Binding Temperature}" 
                   BackgroundColor="LightBlue" 
                   Padding="10"/>

            <Button Text="Запуск опроса виброметра" 
                    Command="{Binding PollVibrometerCommand}"
                    IsEnabled="{Binding IsNotPollingVibrometer}"
                    BackgroundColor="DarkGreen"
                    TextColor="White"
                    Margin="0,10,0,0"/>

            <Button Text="Остановка опроса" 
                    Command="{Binding StopVibrometerCommand}"
                    IsEnabled="{Binding IsPollingVibrometer}"
                    BackgroundColor="DarkRed"
                    TextColor="White"
                    Margin="0,10,0,0"/>
        </StackLayout>
    </ScrollView>
</ContentPage>