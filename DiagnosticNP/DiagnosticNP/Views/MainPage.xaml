<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sfTreeView ="clr-namespace:Syncfusion.XForms.TreeView;assembly=Syncfusion.SfTreeView.XForms"
             xmlns:viewModels="clr-namespace:DiagnosticNP.ViewModels"
             x:Class="DiagnosticNP.Views.MainPage"
             Title="Вибродиагностика"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ContentPage.BindingContext>
        <viewModels:MainViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Frame Grid.Row="0" BackgroundColor="{StaticResource PrimaryColor}" 
               CornerRadius="0" HasShadow="True" Padding="20,15">
            <StackLayout>
                <Label Text="ВИБРОДИАГНОСТИКА" 
                       TextColor="White" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center"/>
                <Label Text="Система мониторинга оборудования" 
                       TextColor="{StaticResource PrimaryLightColor}" 
                       FontSize="14" 
                       HorizontalOptions="Center"/>
            </StackLayout>
        </Frame>

        <!-- NFC Filter -->
        <Frame Grid.Row="0" Margin="20,80,20,0" 
               BackgroundColor="{StaticResource AccentColor}"
               IsVisible="{Binding NfcFilter, Converter={StaticResource StringToVisibilityConverter}}"
               CornerRadius="8" HasShadow="True">
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="🎯" FontSize="16" VerticalOptions="Center"/>
                <Label Text="NFC фильтр:" TextColor="White" FontAttributes="Bold" VerticalOptions="Center"/>
                <Label Text="{Binding NfcFilter}" TextColor="White" VerticalOptions="Center" HorizontalOptions="StartAndExpand"/>
            </StackLayout>
        </Frame>

        <!-- TreeView Container -->
        <Frame Grid.Row="1" Margin="20,10,20,10" Style="{StaticResource CardFrame}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Text="Структура оборудования" 
                       Style="{StaticResource TitleLabel}" Margin="0,0,0,10"/>

                <sfTreeView:SfTreeView Grid.Row="1" 
                                       ItemsSource="{Binding FilteredNodes}"
                                       ChildPropertyName="Children"
                                       AutoExpandMode="AllNodesExpanded"
                                       SelectedItem="{Binding SelectedNode}">

                    <sfTreeView:SfTreeView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10,8" BackgroundColor="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" 
                                       Text="{Binding Name}" 
                                       VerticalOptions="Center"
                                       FontSize="14"/>

                                <Label Grid.Column="1" 
                                       Text="📊" 
                                       IsVisible="{Binding Type, Converter={StaticResource DirectionTypeConverter}}"
                                       FontSize="12"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </DataTemplate>
                    </sfTreeView:SfTreeView.ItemTemplate>
                </sfTreeView:SfTreeView>
            </Grid>
        </Frame>

        <!-- Action Buttons -->
        <Frame Grid.Row="2" Margin="20,5,20,20" Style="{StaticResource CardFrame}" Padding="15">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="15">
                <Button Text="📥 Загрузить" 
                        Command="{Binding LoadControlPointsCommand}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource PrimaryButton}"
                        WidthRequest="110"/>

                <Button Text="📤 Выгрузить" 
                        Command="{Binding UploadDataCommand}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource SuccessButton}"
                        WidthRequest="110"/>

                <Button Text="🗑️ Очистить" 
                        Command="{Binding ClearDataCommand}"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource DangerButton}"
                        WidthRequest="110"/>
            </StackLayout>
        </Frame>

        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="3" 
              IsVisible="{Binding IsLoading}"
              BackgroundColor="#80000000">

            <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">
                <ActivityIndicator IsRunning="True" Color="White" HeightRequest="50" WidthRequest="50"/>
                <Label Text="Загрузка..." TextColor="White" FontSize="16" HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>