<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiagnosticNP.Views.MainPage"
             Title="Вибродиагностика">

    <StackLayout Padding="20">
        <Label Text="Данные NFC метки:" FontAttributes="Bold"/>
        <Label Text="{Binding DiagnosticData.NFCData}" 
               BackgroundColor="LightGray" 
               Padding="10"/>

        <Label Text="Время сканирования:" FontAttributes="Bold" Margin="0,10,0,0"/>
        <Label Text="{Binding DiagnosticData.ScanTime}" 
               BackgroundColor="LightGray" 
               Padding="10"/>

        <Button Text="Запуск сканирования" 
                Command="{Binding StartListeningCommand}"
                BackgroundColor="Green"
                TextColor="White"
                Margin="0,20,0,0"/>

        <Button Text="Остановка сканирования" 
                Command="{Binding StopListeningCommand}"
                BackgroundColor="Red"
                TextColor="White"
                Margin="0,10,0,0"/>

        <Button Text="Прочитать метку" 
                Command="{Binding ReadTagCommand}"
                BackgroundColor="Blue"
                TextColor="White"
                Margin="0,10,0,0"/>
    </StackLayout>
</ContentPage>