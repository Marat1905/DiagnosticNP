<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiagnosticNP.Views.MainPage"
             Title="Вибродиагностика">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">

            <!-- NFC данные -->
            <Frame BackgroundColor="#F5F5F5" Padding="15" CornerRadius="10">
                <StackLayout>
                    <Label Text="Данные NFC метки:" FontAttributes="Bold" FontSize="16"/>
                    <Label Text="{Binding DiagnosticData.NFCData}" 
                           BackgroundColor="LightGray" 
                           Padding="10"
                           Margin="0,5,0,0"/>

                    <Label Text="Время сканирования:" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Label Text="{Binding DiagnosticData.ScanTime}" 
                           BackgroundColor="LightGray" 
                           Padding="10"
                           Margin="0,5,0,0"/>
                </StackLayout>
            </Frame>

            <!-- Статус NFC -->
            <Frame BackgroundColor="{Binding NfcStatusColor}" Padding="15" CornerRadius="10">
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Label Text="{Binding NfcStatusText}" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           VerticalOptions="Center"/>
                </StackLayout>
            </Frame>

            <!-- Кнопки управления -->
            <StackLayout Spacing="10">
                <Button Text="Загрузить структуру контрольных точек" 
                        Command="{Binding LoadControlPointsCommand}"
                        Style="{StaticResource PrimaryButton}"/>

                <Button Text="Показать дерево контрольных точек" 
                        Command="{Binding ShowControlPointsTreeCommand}"
                        Style="{StaticResource PrimaryButton}"/>

                <Button Text="Выгрузить данные на сервер" 
                        Command="{Binding UploadDataCommand}"
                        Style="{StaticResource SuccessButton}"/>

                <Button Text="Очистить данные замеров" 
                        Command="{Binding ClearMeasurementsCommand}"
                        Style="{StaticResource DangerButton}"/>
            </StackLayout>

            <!-- Прогресс -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"/>
            <Label Text="{Binding StatusMessage}" 
                   IsVisible="{Binding HasStatusMessage}"
                   TextColor="{Binding StatusColor}"
                   HorizontalTextAlignment="Center"/>

        </StackLayout>
    </ScrollView>
</ContentPage>